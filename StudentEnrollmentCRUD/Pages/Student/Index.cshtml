@page
@model StudentEnrollmentCRUD.Pages.Student.IndexModel
@{
    ViewData["Title"] = "List of Students";
}

<h1 class="text-primary">List of Students</h1>
<a href='/Student/Create' class="btn btn-primary btn-sm">Add new Student</a>
<div class="table-responsive mt-3">
    <table class="table table-bordered table-striped">
        <thead class="bg-primary text-white">
            <tr>
                <td>Fullname</td>
                <td>Email</td>
                <td>Mobile No.</td>
                <td>Address</td>
                <td>Gender</td>
                <td>Course</td>
                <td>Subjects</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.listStudents)
            {
                <tr>
                    <td>@item.fullname</td>
                    <td>@item.email</td>
                    <td>@item.mobile_no</td>
                    <td>@item.address</td>
                    <td>@item.gender</td>
                    <td>@item.course</td>
                    <td>@item.subjects</td>
                    <td>
                        <a href="/Student/Edit?id=@item.id" class="btn btn-warning btn-sm m-1">Edit</a>
                        <a href="/Student/Delete?id=@item.id" onclick="return confirm('Are you sure you want to delete this student?');" class="btn btn-danger btn-sm m-1">Delete</a>


                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
